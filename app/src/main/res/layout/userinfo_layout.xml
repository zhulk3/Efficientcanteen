<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="20dp"
  android:layout_marginLeft="110dp"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"

    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/first"
    tools:ignore="MissingConstraints">
    <ImageView
      android:layout_width="40dp"
      android:layout_height="40dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:id="@+id/school_img"
      android:src="@drawable/school"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/school_img"
      app:layout_constraintLeft_toRightOf="@id/school_img"
      android:layout_marginLeft="20dp"
      android:text="学校"
      android:id="@+id/nav_school"/>

  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/first"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="@id/first"
    android:gravity="center_vertical"
    android:id="@+id/second"
    android:layout_marginTop="10dp"
    tools:ignore="MissingConstraints">

    <ImageView
      android:id="@+id/sno_img"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/sno"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/sno_img"
      app:layout_constraintLeft_toRightOf="@id/sno_img"
      android:layout_marginLeft="20dp"
      android:text="学号"
      android:id="@+id/nav_sno"/>

  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/second"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="@id/second"
    android:gravity="center_vertical"
    android:id="@+id/third"
    android:layout_marginTop="10dp"
    tools:ignore="MissingConstraints">

    <ImageView
      android:id="@+id/name_img"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/name"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/name_img"
      app:layout_constraintLeft_toRightOf="@id/name_img"
      android:layout_marginLeft="20dp"
      android:text="姓名"
      android:id="@+id/nav_name"/>

  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/third"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="@id/third"
    android:gravity="center_vertical"
    android:layout_marginTop="10dp"
    android:id="@+id/forth"
    tools:ignore="MissingConstraints">

    <ImageView
      android:id="@+id/date_img"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/date"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/date_img"
      app:layout_constraintLeft_toRightOf="@id/date_img"
      android:layout_marginLeft="20dp"
      android:text="电话"
      android:id="@+id/nav_date"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/forth"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="@id/forth"
    android:gravity="center_vertical"
    android:layout_marginTop="10dp"
    android:id="@+id/fifth"
    tools:ignore="MissingConstraints">

    <ImageView
      android:id="@+id/sex_img"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/sex"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/sex_img"
      app:layout_constraintLeft_toRightOf="@id/sex_img"
      android:layout_marginLeft="20dp"
      android:text="性别"
      android:id="@+id/nav_sex"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/fifth"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="@id/fifth"
    android:gravity="center_vertical"
    android:id="@+id/sixth"
    android:layout_marginTop="10dp"
    tools:ignore="MissingConstraints">

    <ImageView
      android:id="@+id/email"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/nav_mail"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/email"
      app:layout_constraintLeft_toRightOf="@id/email"
      android:layout_marginLeft="20dp"
      android:text="邮箱"
      android:id="@+id/nav_mail"/>

  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/sixth"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="@id/sixth"
    android:gravity="center_vertical"
    android:id="@+id/seventh"
    android:layout_marginTop="10dp"
    tools:ignore="MissingConstraints">

    <ImageView
      android:id="@+id/address"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/address"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/address"
      app:layout_constraintLeft_toRightOf="@id/address"
      android:layout_marginLeft="20dp"
      android:text="地址"
      android:id="@+id/nav_address"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/seventh"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="@id/seventh"
    android:gravity="center_vertical"
    android:id="@+id/eight"
    android:layout_marginTop="10dp"
    tools:ignore="MissingConstraints">

    <ImageView
      android:id="@+id/balance"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/balance"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/balance"
      app:layout_constraintLeft_toRightOf="@id/balance"
      android:layout_marginLeft="20dp"
      android:text="余额"
      android:id="@+id/nav_balance"/>

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>